<div class="container">
  <h1>This is what you need for <%= @cocktail.name %> </h1>
  <h2>Ingredients: </h2>
    <% Dose.all.where(cocktail_id: @cocktail.id).each do |dose| %>
    <p><%= dose.description %> - <%= Ingredient.find(dose.ingredient_id).name %></p>
    <% end %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill if @cocktail.photo.attached? %>
</div>


<%= link_to "BACK to all", cocktails_path %>
<%= link_to "DELETE", @cocktail, method: :delete, data: { confirm: 'Really?'} %>
